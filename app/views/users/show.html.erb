<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">
    <section>
      
        <%= gravatar_for @user %>
        <h1><%= @user.name %></h1>
        <p><%= @user.email %></p>
        <br><br>
        <p>O mnie: <%= @user.about %></p>
    </section>
  </aside>
  <aside class="span8">
    <section>
      <% if @user.cardsets.any? %>
        <h3>Sety użytkownika (<%= @user.cardsets.count %>):</h3>
       
            <ul class="cards">
           <%= render @cardsets%>
            </ul>
      <% end %>
    </section>
    <section>
      <% if @user.cards.any? %>
      
        <h3>Karty użytkownika (<%= @user.cards.count %>):</h3>
        <%= will_paginate @cards %>
            <ul class="cards">
           <%= render @cards%>
            </ul>           
      <% end %>
    </section>
  </aside>
</div>
