<% provide(:title, 'Rejestracja') %>
<h1>Rejestracja</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :name, "Nazwa użytkownika" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Hasło" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Powtórz hasło" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :birthdate, "Data urodzenia:" %>
      <%= f.date_select :birthdate %>

      <%= f.label :about, "O mnie:" %>
      <%= f.text_area :about %>
      <br>
      <%= f.submit "Utwórz moje konto!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>